rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: User is signed in
    function isAuthenticated() {
      return request.auth != null;
    }
    // Helper: User owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // ðŸ”¥ 1. DIRECTORY CONFIGURATION
    match /users/directory/{document=**} {
      allow read, write: if isAuthenticated();
    }

    // 2. USERS COLLECTION
    match /users/{userId} {
      allow create: if isAuthenticated() && isOwner(userId);
      allow read: if isAuthenticated(); // Allow reading profiles (needed for hiring/connects)
      allow update: if isAuthenticated() && (
        isOwner(userId) || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['connects'])
      );
    }
    
    // 3. JOBS COLLECTION
    match /jobs/{jobId} {
      allow read, list: if true;
      allow create: if isAuthenticated();
      allow delete: if isAuthenticated() && resource.data.clientId == request.auth.uid;
      allow update: if (isAuthenticated() && resource.data.clientId == request.auth.uid) ||
                    request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']) ||
                    (isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['proposalsCount']));

      // Subcollection: Proposals
      match /proposals/{proposalId} {
         allow read, write: if isAuthenticated();
      }
    }
    
    // 4. COLLECTION GROUP QUERIES (For Freelancer Dashboard)
    match /{path=**}/proposals/{proposalId} {
        allow read: if isAuthenticated() && resource.data.freelancerId == request.auth.uid;
    }

    // 5. PROJECTS COLLECTION (New)
    match /projects/{projectId} {
        allow read, write: if isAuthenticated();
    }

    // 6. MESSAGING & CONVERSATIONS (Secure)
    match /conversations/{conversationId} {
        allow create: if isAuthenticated() && (request.auth.uid in request.resource.data.participants);
        
        // Split read to allow checking for non-existent docs
        allow get: if isAuthenticated() && (resource == null || request.auth.uid in resource.data.participants);
        allow list: if isAuthenticated() && (request.auth.uid in resource.data.participants);
        allow update: if isAuthenticated() && (request.auth.uid in resource.data.participants);
        
        match /messages/{messageId} {
            allow read, list, create: if isAuthenticated() && (request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants);
        }
    }

    // 7. NOTIFICATIONS
    match /notifications/{notificationId} {
      // Anyone can create a notification (e.g. A notifies B)
      allow create: if isAuthenticated();
      // Only the recipient can read or update (mark as read) their notifications
      allow read, update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Optional: Allow delete if needed
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}
